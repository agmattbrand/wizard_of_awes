<%= semantic_form_for @snippet, :url => woa_snippets_path, :validate => true do |f| %>
	<%= f.inputs do %>
		<%= f.input :slug %>
		<%= f.input :body, :as => :text %>
	<% end %>
	<div style="clear:both;display:block;margin-top:10px;margin-bottom:10px;">
		<div class="actions">
			<%= f.buttons do %>
				<%= f.commit_button %>
			<% end %>
		</div>
	</div>
<% end %>
